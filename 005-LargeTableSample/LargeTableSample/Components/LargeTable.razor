<h3>LargeTable</h3>

<div style="width: 100%;">
	<table class="table table-striped table-bordered"
			 cellspacing="0" width="100%">
		<thead>
			<tr>
				@foreach (var columnName in _dataTable.GetColumnNames())
				{
					<th class="th-sm">@columnName</th>
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var row in GetRows())
			{
				<tr>
					@foreach (var cell in row.GetColumnValues())
					{
						<td>@cell</td>
					}
				</tr>
			}
		</tbody>
	</table>
	<nav aria-label="Page navigation example">
		<ul class="pagination">
			<li class="page-item @GetPreviousPageCss()">
				<a class="page-link" href="#" aria-label="Previous"
					@onclick="GoToPreviousPage">
					<span aria-hidden="true">&laquo;</span>
					<span class="sr-only">Previous</span>
				</a>
			</li>
			@foreach (var userPageIndex in GetUserPageIndexList())
			{
				<li class="page-item @GetPageIndexActiveCss(userPageIndex)">
					<a class="page-link" href="#" @onclick="() => GoToPage(userPageIndex)">@userPageIndex</a>
				</li>
			}
			<li class="page-item">
				<a class="page-link @GetNextPageCss()" href="#" aria-label="Next"
					@onclick="GoToNextPage">
					<span aria-hidden="true">&raquo;</span>
					<span class="sr-only">Next</span>
				</a>
			</li>
		</ul>
	</nav>
</div>
